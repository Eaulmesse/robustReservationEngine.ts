FROM node:20-alpine

WORKDIR /app

# Copier les fichiers de dépendances
COPY package*.json ./

# Installer toutes les dépendances (dev incluses)
RUN npm install

# Exposer le port
EXPOSE 3000

# Démarrer en mode développement avec legacy watch (fonctionne mieux avec Docker sur Windows)
CMD ["npm", "run", "start:dev:legacy"]
