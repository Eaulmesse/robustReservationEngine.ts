// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  CLIENT
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  firstName     String
  lastName      String
  password      String
  role          UserRole      @default(CLIENT)
  phone         String?
  description   String?       // Description en tant que provider (optionnel)
  address       String?       // Adresse en tant que provider (optionnel)
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Relations - En tant que client
  appointmentsAsClient    Appointment[]  @relation("UserAppointments")
  
  // Relations - En tant que provider
  availabilities          Availability[] @relation("ProviderAvailabilities")
  appointmentsAsProvider  Appointment[]  @relation("ProviderAppointments")

  @@map("users")
}

model Availability {
  id            String      @id @default(uuid())
  providerId    String      // User qui propose les créneaux
  dayOfWeek     DayOfWeek
  startTime     String      // Format HH:MM (ex: "09:00")
  endTime       String      // Format HH:MM (ex: "17:00")
  slotDuration  Int         // Durée d'un créneau en minutes (ex: 30)
  isRecurring   Boolean     @default(true) // Si c'est récurrent chaque semaine
  specificDate  DateTime?   // Pour des disponibilités spécifiques à une date
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relations
  provider      User        @relation("ProviderAvailabilities", fields: [providerId], references: [id], onDelete: Cascade)

  @@map("availabilities")
  @@index([providerId])
  @@index([dayOfWeek])
}

// Modèle Appointment - Rendez-vous/Réservation
model Appointment {
  id            String            @id @default(uuid())
  userId        String            // User qui prend le RDV (client)
  providerId    String            // User qui reçoit le RDV (provider)
  startTime     DateTime
  endTime       DateTime
  status        AppointmentStatus @default(PENDING)
  notes         String?
  cancelReason  String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  // Relations
  user          User              @relation("UserAppointments", fields: [userId], references: [id], onDelete: Cascade)
  provider      User              @relation("ProviderAppointments", fields: [providerId], references: [id], onDelete: Cascade)

  @@map("appointments")
  @@index([userId])
  @@index([providerId])
  @@index([startTime])
  @@index([status])
}


